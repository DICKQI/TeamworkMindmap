<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_fragment_bg_radius"
    android:id="@+id/al_share">

    <TextView
        android:id="@+id/tv_share_mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="1dp"
        android:text="分享思维导图"
        android:textColor="@color/node_select"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_share_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="62dp"
        android:text="ShareId"
        android:textColor="@color/node_select"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_share_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="48dp"
        android:ems="10"
        android:hint="分享后自动生成"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="112dp"
        android:maxLength="10"
        android:text="密码"
        android:textColor="@color/node_select"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="101dp"
        android:maxLength="6"
        android:digits="1234567890"
        android:hint="在此设置分享密码"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="156dp"
        android:textColor="@color/colorAccent"
        android:text="Tips:你的小伙伴们可以通过ShareId以及密码与你一同协作\n密码不长于6位,仅支持数字,点击右上角分享/取消分享"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_share_or_not"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="280dp"
        android:layout_y="0dp"
        app:srcCompat="@drawable/share_mm_blue"
        android:background="@drawable/bg_radius_orange"/>

</AbsoluteLayout>