<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_fragment_bg_radius"
    android:id="@+id/al_find">

    <TextView
        android:id="@+id/tv_share_mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="1dp"
        android:text="导入思维导图"
        android:textColor="@color/node_select"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_share_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="62dp"
        android:text="ShareId"
        android:textColor="@color/node_select"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_share_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="48dp"
        android:ems="10"
        android:hint="伙伴提供的ShareId"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="112dp"
        android:maxLength="10"
        android:text="密码"
        android:textColor="@color/node_select"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="101dp"
        android:maxLength="6"
        android:digits="1234567890"
        android:hint="输入分享密码"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_x="14dp"
        android:layout_y="156dp"
        android:text="添加"
        style="@style/button_orange"
        android:background="@drawable/button_blue_backgroud" />

    <ImageView
        android:id="@+id/iv_cloud"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="280dp"
        android:layout_y="0dp"
        app:srcCompat="@drawable/cloud_add_mm"
        android:background="@drawable/bg_radius_orange"/>

</AbsoluteLayout>