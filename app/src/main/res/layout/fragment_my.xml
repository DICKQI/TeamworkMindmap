<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/my_picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="250dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="170dp"
                android:text="昵称"
                android:textSize="25sp"
                />
            <EditText
                android:id="@+id/my_name"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="100dp"
                android:layout_marginRight="60dp"
                />
            <View  android:layout_height="1dp"
                android:layout_width="309dp"
                android:background="#267BA5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="180dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录相关"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="150dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="60dp"
                android:text="账户:"
                android:textSize="19dp"
                />
            <EditText
                android:id="@+id/my_account"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="130dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="60dp"
                android:text="密码:"
                android:textSize="19dp"
                />
            <EditText
                android:id="@+id/my_password"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="130dp"
                />

            <View  android:layout_height="1dp"
                android:layout_width="309dp"
                android:background="#267BA5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="340dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="310dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="60dp"
                android:text="个性签名:"
                android:textSize="19dp"
                />
            <EditText
                android:id="@+id/my_signature"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/my_edit_signature_bg"
                android:minLines="2"
                android:maxLines="2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="60dp"
                android:text="性别:"
                android:textSize="19dp"
                />
            <RadioGroup
                android:id="@+id/my_rdoGp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="130dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/my_rdo_genderMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"/>
                <RadioButton
                    android:id="@+id/my_rdo_genderFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="女"/>
                <RadioButton
                    android:id="@+id/my_rdo_genderPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="保密"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="530dp"
                android:layout_marginLeft="60dp"
                android:text="邮箱:"
                android:textSize="19dp"
                />
            <EditText
                android:id="@+id/my_email"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="130dp"
                />
            <!--    <EditText-->
            <!--        android:id="@+id/my_gender"-->
            <!--        android:layout_width="220dp"-->
            <!--        android:layout_height="40dp"-->
            <!--        android:layout_alignParentTop="true"-->
            <!--        android:layout_alignParentLeft="true"-->
            <!--        android:layout_marginTop="470dp"-->
            <!--        android:layout_marginLeft="130dp"-->
            <!--        />-->


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>